{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es2021",
        "lib": ["es2021"],
        "sourceMap": true,
        "outDir": "./dist/app/",
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "noEmitOnError": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "skipLibCheck": true
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules"]
}
